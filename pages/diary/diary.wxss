.diary {
  display: flex;
  flex-direction: column;
  height: 100vh;
  align-items: center;
  position: relative;
}

.diary-body {
  flex-grow: 1;
  width: 100%;
}

.diary-body-bg {
  width: 100%;
  height: 100%;
}

.diary-body-bg image {
  width: 100%;
  height: 100%;
}

.diary-bottom {
  width: 100%;
  background-color: #ddd;
}

.diary-bottom button {
  background-color: #23b8ff;
}




.head {
  background-color: #ddd;
  display: flex;
}

.bottom {
  background-color: #fff;
}

.body {
  flex-grow: 1;
  position: relative;
}

.list-scroll {
  position: absolute;
  top: 0;
  bottom: 0px;
  left: 0px;
  right: 0;
}

.list {
  display: flex;
  flex-wrap: wrap;
  align-items: flex-start;
  justify-content: space-between;
  margin-left: 2vw;
  margin-right: 2vw;
}
.course-card {
  width: 47vw;
  margin-top: 10px;
  margin-bottom: 5px;
}

.course-card image {
  width: 100%;
  height: 150px;
  border-radius: 5px;
}

.price {
  color: #23b8ff;
}

.guide {
  display: flex;
  justify-content: space-between;
}

.guide-item {
  flex-grow: 1;
  text-align: center;
  font-size: 14px;
  line-height: 1;
  padding: 10px;
}

.guide-item image {
  width: 38px;
  height: 38px;
}

.guide-item :hover {
  background-color: #888;
}

